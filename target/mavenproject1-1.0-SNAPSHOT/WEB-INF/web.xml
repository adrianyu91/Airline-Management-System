<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>AirlineManagement.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>account</servlet-name>
        <servlet-class>AirlineManagement.account</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightStatus</servlet-name>
        <servlet-class>AirlineManagement.FlightStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FlightSearch</servlet-name>
        <servlet-class>AirlineManagement.FlightSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookFlight</servlet-name>
        <servlet-class>AirlineManagement.BookFlight</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>account</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightStatus</servlet-name>
        <url-pattern>/FlightStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FlightSearch</servlet-name>
        <url-pattern>/FlightSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookFlight</servlet-name>
        <url-pattern>/BookFlight</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
